<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="datePickerCircleColor">@color/accent_color</item>
    </style>

    <!--
        Use these style overrides in your app to style the date picker
    -->

    <style name="DatePicker.Header" parent="DatePickerBase.Header">
        <item name="android:background">#ff000000</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DatePicker.BorderlessButton" parent="DatePickerBase.BorderlessButton">
        <item name="android:background">#ff000000</item>
    </style>

    <style name="DatePicker.DateAnimator" parent="DatePickerBase.DateAnimator">
        <item name="android:background">#ff000000</item>
    </style>

    <!--
    <style name="DatePicker.DateIndicator" parent="DatePickerBase.DateIndicator">
        <item name="android:textColor">@color/date_picker_red_year_selector</item>
    </style>

    <style name="DatePicker.SelectedDate" parent="DatePickerBase.SelectedDate">
        <item name="android:textColor">@color/date_picker_red_selector</item>
    </style>
    -->
    <style name="DatePicker.SelectedDate.Background">
        <item name="android:background">#ff000000</item>
    </style>

</resources>
